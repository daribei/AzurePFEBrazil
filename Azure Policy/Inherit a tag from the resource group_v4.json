{
    "properties": {
      "displayName": "BRF - Inherit a tag from the resource group - Owner",
      "policyType": "Custom",
      "mode": "Indexed",
      "metadata": {
        "category": "Tags",
        "createdBy": "46e8b88a-2752-4480-8b4f-a5c80036b239",
        "createdOn": "2020-02-10T19:10:35.6726637Z",
        "updatedBy": null,
        "updatedOn": null
      },
      "parameters": {
        "tagName": {
          "type": "String",
          "metadata": {
            "displayName": "Tag Name",
            "description": "Name of the tag, such as 'environment'"
          }
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "[concat('tags[', parameters('tagName'), ']')]",
              "exists": "false"
            },
            {
              "value": "[resourceGroup().tags[parameters('tagName')]]",
              "notEquals": ""
            }
          ]
        },
        "then": {
          "effect": "modify",
          "details": {
            "roleDefinitionIds": [
              "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
            ],
            "operations": [
              {
                "operation": "add",
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "value": "[resourceGroup().tags[parameters('tagName')]]"
              }
            ]
          }
        }
      }
    },
    "id": "/subscriptions/0c711df8-3150-425d-836e-c79869fc901d/providers/Microsoft.Authorization/policyDefinitions/f5f7e81a-17f4-414e-ae68-b0b41a2b4dc5",
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "f5f7e81a-17f4-414e-ae68-b0b41a2b4dc5"
  }